if ARCH_HI3798MV310
menu "HI3798MV310 board feature"

config MACH_HI3798MV310
	bool "Support hi3798mv310 platform"
	select CPU_V7
	select ARM_GIC
	select ARM_TIMER_SP804
	select COMMON_CLK
	select ARCH_REQUIRE_GPIOLIB
	select DYNAMIC_DEBUG
	help
	  Include support for the hisilion HI3798MV310 platform.
	  HI3798MV310 support ARM CORTEX-A7 processer,
	  within a Generic Interrupt Controller.
	  Support DDR2 and DDR3.

choice
	prompt "CPU timer source"
	default HAVE_SP804_LOCAL_TIMER_HI3798MV310

config HAVE_SP804_LOCAL_TIMER_HI3798MV310
	bool "arm local timer from sp804"
	help
	  arm local timer from sp804.

config HAVE_ARM_LOCAL_TIMER_HI3798MV310
	bool "arm local timer from arm self"
	help
	  arm local timer from arm self.
endchoice

config DEFAULT_UART_BASE_ADDR
	hex "Default uart controller base address"
	default "0xF8B00000"
	help
	  Default UART controller base address

config DEFAULT_VMALLOC_SIZE
	int "Default vmalloc size"
	default 500
	help
	  Default vmalloc size in MBytes. Use "vmalloc=size" to change it.

config HI3798MV310_FPGA
	bool "Enable HI3798MV310 Fpga config"
	default n if ARCH_HI3798MV310

endmenu
endif
